---
interface Props {
  tag: string;
  clickable: boolean;
}

const { tag, clickable } = Astro.props;
const classList: string = clickable
  ? 'hover:bg-accent-dark hover:text-accent-light transition-all duration-500'
  : '';
---

<span
  class={`block whitespace-nowrap px-2 py-1 text-xs tracking-wide font-medium bg-green-light dark:bg-blue-dark/75 dark:text-white rounded-full uppercase ${classList}`}
>
  {tag}
</span>
