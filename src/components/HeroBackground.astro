---
import { Image } from 'astro:assets';
// import heroImage from '../images/games/gaming-center-hero.jpg'

interface Props {
  title: string;
  description: string | null;
}

const { title, description } = Astro.props;
---

<section>
  <!-- <Image src={heroImage} alt='Gaming Center' class='w-full h-auto' /> -->
  <div class='container'>
    <span class='block pb-8'></span>

    <h1 set:html={title} class='text-center' />

    {
      description ? (
        <>
          <span class='block pb-8' />
          <p set:html={description} class='text-center text-xl' />
          <slot />
          <span class='block pb-8' />
        </>
      ) : (
        <>
          <slot />
          <span class='block pb-8' />
        </>
      )
    }
  </div>
</section>
