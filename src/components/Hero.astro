---
interface Props {
  title: string;
  description: string | null;
}

const { title, description } = Astro.props;
---

<section>
  <div class='container'>
    <span class='block pb-8'></span>

    <h1 set:html={title} class='text-center' />

    {
      description ? (
        <>
          <span class='block pb-8' />
          <p set:html={description} class='text-center text-xl' />
          <slot />
          <span class='block pb-8' />
        </>
      ) : (
        <>
          <slot />
          <span class='block pb-8' />
        </>
      )
    }
  </div>
</section>
