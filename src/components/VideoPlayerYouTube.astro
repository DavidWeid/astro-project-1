---
interface Props {
  src: string;
}

const { src } = Astro.props;
---

<iframe
  class='aspect-video w-full h-auto'
  width='640'
  height='360'
  src={src}
  title='YouTube video player'
  allow='accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share'
  allowfullscreen
>
</iframe>
